{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "defaultValue": "[resourceGroup().location]",
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "app_service_plan_name": {
            "type": "string"
        },
        "docker_image_name": {
            "defaultValue": "mcr.microsoft.com/appsvc/staticsite:latest",
            "type": "string"
        },
        "alwaysOn": {
            "defaultValue": false,
            "type": "bool"
        },
        "linuxFxVersion": {
            "defaultValue": "DOCKER|mcr.microsoft.com/appsvc/staticsite:latest",
            "type": "string"
        },
        "dockerRegistryUrl": {
            "defaultValue": "https://mcr.microsoft.com",
            "type": "string"
        },
        "dockerRegistryUsername": {
            "defaultValue": "",
            "type": "string"
        },
        "dockerRegistryPassword": {
            "defaultValue": "",
            "type": "securestring"
        },
        "dockerRegistryStartupCommand": {
            "defaultValue": "",
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2022-03-01",
            "name": "[parameters('name')]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('location')]",
            "kind": "app,linux,container",
            "dependsOn": [],
            "properties": {
                "name": "[parameters('name')]",
                "siteConfig": {
                    "numberOfWorkers": 1,
                    "linuxFxVersion": "[concat('DOCKER|', parameters('docker_image_name'))]",
                    "acrUseManagedIdentityCreds": false,
                    "alwaysOn": false,
                    "http20Enabled": false,
                    "functionAppScaleLimit": 0,
                    "minimumElasticInstanceCount": 0
                },
                "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('app_service_plan_name'))]",
                "clientAffinityEnabled": false,
                "virtualNetworkSubnetId": null,
                "httpsOnly": true,
                "publicNetworkAccess": "Enabled"
            }
        }
    ]
}
