PREFIX schema: <https://id.example.org/schema/>
PREFIX : <http://jena.apache.org/fuseki#>
PREFIX ja: <http://jena.hpl.hp.com/2005/11/Assembler#>
PREFIX tdb2: <http://jena.apache.org/2016/tdb#>
PREFIX text: <http://jena.apache.org/text#>

[
    a :Service ;
    :name "" ;
    :endpoint [
        :operation :query ;
        :name "sparql"
    ] ;
    :dataset [
        a ja:DatasetRDFS ;
        ja:rdfsSchema <file:vocabulary.ttl> ;
        ja:dataset [
            a text:TextDataset ;
            text:dataset [
                a tdb2:DatasetTDB ;
                tdb2:location "./db/" ;
            ] ;
            text:index [
                a text:TextIndexLucene ;
                text:directory "./fts-index/" ;
                text:entityMap <entityMap> ;
            ] ;
        ] ;
    ] ;
] .

# This must be a URI node for some reason.
<entityMap>
    a text:EntityMap ;
    text:entityField "uri" ;
    text:defaultField "organizationDescription" ;
    text:uidField "uid" ;
    text:map (
        [
            text:field "organizationDescription" ;
            text:predicate schema:organizationDescription ;
        ]
    ) ;
.
