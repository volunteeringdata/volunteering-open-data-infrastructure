PREFIX : <urn:named-query:>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

[
	:path "activity" ;
	:endpointName "All activities" ;
	:endpointDescription "List of volunteering activity identifiers and their labels" ;
] .

[
	:path "activity_all" ;
	:endpointName "All activities with details" ;
	:endpointDescription "List of all volunteering activities with all available details" ;
] .

[
	:path "activity_by_id" ;
	:endpointName "Specific identified activity with details" ;
	:endpointDescription "A single volunteering activity with all available details" ;
	:parameter [
		:parameterName "id" ;
		:parameterDescription "The identifier of the activity to retrieve. Should be the local part of the full URI of the activity. E.g. for an activity with URI http://example.com/1234, use just the last part: 1234" ;
		:example "68f792b0bf48f6d5969d0ead"
	] ;
] .

[
	:path "activity_by_location" ;
	:endpointName "Activities near location" ;
	:endpointDescription "List of volunteering activities with sessions that are located within a certain distance from a certain geographical point" ;
	:parameter [
		:parameterName "lat" ;
		:parameterDescription "The latitude of the point to search around" ;
		:datatype xsd:double ;
		:example "51.509"
	] ;
	:parameter [
		:parameterName "lon" ;
		:parameterDescription "The longitude of the point to search around" ;
		:datatype xsd:double ;
		:example "-0.118"
	] ;
	:parameter [
		:parameterName "within" ;
		:parameterDescription "The distance in metres within which to search" ;
		:datatype xsd:integer ;
		:example "1000"
	] ;
] .

[
	:path "activity_by_name" ;
	:endpointName "Activities with matching names" ;
	:endpointDescription "List of volunteering activities whose label matches the given name" ;
	:parameter [
		:parameterName "name" ;
		:parameterDescription "The search query to match activity labels against. A Lucene query string." ;
		:example "Childbirth"
	] ;
] .

[
	:path "activity_count" ;
	:endpointName "Activity count" ;
	:endpointDescription "Number of volunteering activities in the system" ;
] .

[
	:path "activity_list" ;
	:endpointName "Activity list" ;
	:endpointDescription "Simple list of all volunteering activity identifiers" ;
] .

[
	:path "activity_search" ;
	:endpointName "Activity search" ;
	:endpointDescription "List of identifiers and labels of activity whose label or description match the given search query, sorted by descending order of relevance" ;
	:parameter [
		:parameterName "query" ;
		:parameterDescription "The search query to match activities against. A Lucene query string." ;
		:example "biodiversity"
	] ;
] .

