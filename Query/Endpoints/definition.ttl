[
	:path "describe" ;
	:endpointName "Describe resource" ;
	:endpointDescription "Gives a concise bounded description of a single identified thing, that is, all the details attached to one identifier, without traversing to details of other linked identifiers" ;
	:parameter [
		:parameterName "id" ;
		:parameterDescription "The identifier of something in the system" ;
		:example "68f5406090268edd4a86435a"
	] ;
] .

[
	:path "organisation" ;
	:endpointName "All organisations" ;
	:endpointDescription "List of volunteering involving organisations identifiers and their labels" ;
] .

[
	:path "organisation_all" ;
	:endpointName "All organisations data" ;
	:endpointDescription "All volunteering involving organisations with details, that is, all the data associated with VIOs" ;
] .

[
	:path "organisation_by_id" ;
	:endpointName "Organisation by identifier" ;
	:endpointDescription "" ;
	:parameter [
		:parameterName "id" ;
		:parameterDescription "The identifier of the activity to retrieve. Should be the local part of the full URI of the activity. E.g. for an activity with URI http://example.com/1234, use just the last part: 1234" ;
		:example "68f53f8346b712131f0148e8"
	] ;
] .

[
	:path "organisation_by_location" ;
	:endpointName "Organisations near location" ;
	:endpointDescription "List of volunteering organisations with activities with sessions that are located within a certain distance from a certain geographical point" ;
	:parameter [
		:parameterName "lat" ;
		:parameterDescription "The latitude of the point to search around" ;
		:datatype xsd:double ;
		:example "51.509"
	] ;
	:parameter [
		:parameterName "lon" ;
		:parameterDescription "The longitude of the point to search around" ;
		:datatype xsd:double ;
		:example "-0.118"
	] ;
	:parameter [
		:parameterName "within" ;
		:parameterDescription "The distance in metres within which to search" ;
		:datatype xsd:integer ;
		:example "1000"
	] ;
] .

[
	:path "organisation_by_name" ;
	:endpointName "Organisation by name" ;
	:endpointDescription "List of volunteering involving organisations whose label matches the given name" ;
	:parameter [
		:parameterName "name" ;
		:parameterDescription "The name of the organisation to find" ;
		:example "green~"
	] ;
] .

[
	:path "organisation_count" ;
	:endpointName "Count of organisations" ;
	:endpointDescription "Number of volunteering involving organisations in the system" ;
] .

[
	:path "organisation_list" ;
	:endpointName "List of all organisations" ;
	:endpointDescription "Simple list of all volunteer involving organisations identifiers" ;
] .

[
	:path "organisation_search" ;
	:endpointName "Organisation search" ;
	:endpointDescription "List of identifiers and labels of organisations whose label, description or purpose match the given search query, sorted by descending order of relevance" ;
	:parameter [
		:parameterName "query" ;
		:parameterDescription "The query to search organisations by" ;
		:example "network"
	] ;
] .

[
	:path "requirement" ;
	:endpointName "Requirement" ;
	:endpointDescription "List of requirements that can be linked to volunteering activities and volunteer involving organisations" ;
] .

[
	:path "schema" ;
	:endpointName "Schema" ;
	:endpointDescription "The Volunteering and Social Action Data Model / Ontology. A vocabulary to describe volunteering activities, volunteer-involving organisations and volunteering management systems." ;
] .

[
	:path "taxonomy" ;
	:endpointName "Taxonomy" ;
	:endpointDescription "Categories and concepts related to volunteering activities." ;
] .

[
	:path "search" ;
	:endpointName "Search" ;
	:endpointDescription "Free text search in activities and organisations" ;
	:parameter [
		:parameterName "activityQuery" ;
		:parameterDescription "The search query for activities" ;
		:datatype xsd:string ;
		:example "training"
	] ;
	:parameter [
		:parameterName "organisationQuery" ;
		:parameterDescription "The search query for organisations" ;
		:datatype xsd:string ;
		:example "community"
	] ;
] .
