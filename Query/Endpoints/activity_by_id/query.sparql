BASE <https://id.example.org/>
PREFIX : <https://id.example.org/schema/>

CONSTRUCT {
    ?activity
        a :Activity ;
        :app ?app ;
        :name ?title ;
        :cause ?cause ;
    .

    ?app :name ?name .
  
    ?cause :name ?causeName ; :app ?causeApp .
  
    ?causeApp :name ?causeAppName .
}
WHERE {
    FILTER(?activity = IRI($id))
    ?activity
        :activityApp ?app ;
        :activityLabel ?title ;
        :activityCause ?cause ;
    .

    ?app :appName ?name .
  
    ?causeApp :appName ?causeAppName .
    ?cause :optionDisplayName ?causeName ; :optionApp ?causeApp .
}
