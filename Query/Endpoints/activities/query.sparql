BASE <https://id.volunteeringdata.io/>
PREFIX : <https://id.volunteeringdata.io/schema/>

CONSTRUCT {
    <Activities> :activities ?activity .
    ?activity
        :app ?app ;
        :name ?title ;
        :cause ?cause ;
    .

    ?app :name ?name .
  
    ?cause :name ?causeName ; :app ?causeApp .
  
    ?causeApp :name ?causeAppName .
}
WHERE {
    ?activity
        :activityApp ?app ;
        :activityLabel ?title ;
        :activityCause ?cause ;
    .

    ?app :appName ?name .
  
    ?causeApp :appName ?causeAppName .
    ?cause :optionDisplayName ?causeName ; :optionApp ?causeApp .
}
